<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:id="@+id/main"
                android:clickable="true">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please choose a room"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:width="300dp" android:textSize="30dp" android:textColor="#999999"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 1"
            android:id="@+id/btnRoom1" android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginTop="60dp" android:width="200dp" android:background="#990000"
            android:onClick="room1"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 2"
            android:id="@+id/btnRoom2" android:layout_centerVertical="true" android:layout_alignParentStart="true"
            android:background="#990000" android:width="200dp"
            android:onClick="room2"
    />
</RelativeLayout>